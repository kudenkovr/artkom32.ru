					<div id="cart" class="col-0 head-cart">
						<a href="{{ cart }}" class="btn btn-cart" onclick="$(this).toggleClass('_active').next().fadeToggle(100); return false">Корзина
						{% if count_items %}
						<span class="head-cart-count">{{ count_items }}</span>
						{% else %}
						<span class="head-cart-count" style="display: none;">0</span>
						{% endif %}
						</a>
						
						<div class="head-cart-dropdown">
    {% if products or vouchers %}
        {% for product in products %}
							<div class="cart-item">
								{% if product.thumb %}
								<div class="cart-item-image">
									<img src="{{ product.thumb }}">
								</div>
								{% endif %}
								<div class="cart-item-name"><a href="{{ product.href }}">{{ product.name }}</a></div>
								<div class="cart-item-count">x{{ product.quantity }}</div>
								<div class="cart-item-price">{{ product.total }}</div>
								<div class="cart-item-remove" onclick="cart.remove('{{ product.cart_id }}');">x</div>
							</div>
		{% endfor %}
							<div class="cart-item">
								<div class="cart-item-name _right">Итого:</div>
								<div class="cart-item-total"><span>{{ totals[1].text }}</span></div>
							</div>
							<div class="head-cart-actions">
								<a href="{{ cart }}">Корзина</a>
								<a href="{{ checkout }}">Заказать</a>
							</div>
    {% else %}
							<div class="head-cart-empty">
								<span>{{ text_empty }}</span>
							</div>
    {% endif %}
						</div>
					</div>
